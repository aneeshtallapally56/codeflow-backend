# Server Configuration
PORT=3002
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codeflow?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_BUCKET_NAME=your-storage-bucket-name

# Redis (Optional - for file locking)
REDIS_URL=redis://localhost:6379

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# Project Creation Commands
REACT_PROJECT_COMMAND=npx create-react-app . --template typescript
VUE_PROJECT_COMMAND=npm create vue@latest . -- --typescript
NEXT_PROJECT_COMMAND=npx create-next-app@latest . --typescript --tailwind --eslint
ANGULAR_PROJECT_COMMAND=npx @angular/cli@latest new . --routing --style=css

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://codeflow.vercel.app,https://your-frontend-domain.com 